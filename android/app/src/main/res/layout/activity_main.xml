<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- GLSurfaceView for OpenGL rendering -->
    <android.opengl.GLSurfaceView
        android:id="@+id/glSurfaceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- FPS Counter Overlay -->
    <TextView
        android:id="@+id/fps_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="16dp"
        android:text="FPS: --"
        android:textColor="#00FF00"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="#CC000000"
        android:padding="12dp"
        android:fontFamily="monospace"
        android:elevation="16dp"
        android:translationZ="16dp" />

    <!-- Processing Time Overlay -->
    <TextView
        android:id="@+id/processing_time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|start"
        android:layout_marginTop="48dp"
        android:layout_marginStart="16dp"
        android:text="Processing: -- ms"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:background="#CC000000"
        android:padding="8dp"
        android:elevation="16dp"
        android:translationZ="16dp" />

    <!-- Capture/Export Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/capture_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="24dp"
        android:src="@drawable/ic_camera"
        android:contentDescription="Capture frame" />

    <!-- Confirm Button (hidden by default) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/confirm_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="24dp"
        android:src="@android:drawable/ic_menu_save"
        android:visibility="gone"
        android:contentDescription="Confirm capture" />

    <!-- Retake Button (hidden by default) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/retake_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="24dp"
        android:src="@android:drawable/ic_menu_rotate"
        android:visibility="gone"
        android:contentDescription="Retake" />

    <!-- Mode Selection Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/mode_button"
        style="@style/Widget.Material3.Button.ElevatedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_margin="24dp"
        android:text="Mode: Edges"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:backgroundTint="#CC000000"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:elevation="8dp"
        app:icon="@drawable/ic_arrow_up"
        app:iconGravity="end"
        app:iconTint="#FFFFFF" />

</FrameLayout>
